  	}
}



#i3 GAPS

#gaps inner 2
#gaps outer 4

# Press $mod+Shift+g to enter the gap mode. Choose o or i for modifying outer/inner gaps. Press one of + / - (in-/decrement for current workspace) or 0 (remove gaps for current workspace). If you also press Shift with these keys, the change will be global for all workspaces.
set $mode_gaps Gaps
set $mode_gaps_inner Inner Gaps
set $mode_gaps_outer Outer Gaps
bindsym $mod+Shift+g mode "$mode_gaps"


mode "$mode_gaps" {
	bindsym plus  gaps inner all plus 1; gaps outer all plus 1
	bindsym minus gaps inner all minus 1; gaps outer all minus 1
	bindsym 0     gaps inner all set 2; gaps outer all set 3
	bindsym Shift+0     gaps inner all set 0; gaps outer all set 0
	bindsym o      mode "$mode_gaps_outer"
	bindsym i      mode "$mode_gaps_inner"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
	bindsym plus  gaps inner all plus 1
	bindsym minus gaps inner all minus 1
	bindsym 0 gaps inner all set 2
	bindsym Shift+0 gaps inner all set 0
	bindsym o mode "$mode_gaps_outer"

	bindsym Return mode "$mode_gaps"
	bindsym Escape mode "$mode_gaps"
}

mode "$mode_gaps_outer" {
	bindsym plus  gaps outer all plus 1
	bindsym minus gaps outer all minus 1
	bindsym 0 gaps outer all set 3
	bindsym Shift+0 gaps outer all set 0
	bindsym i mode "$mode_gaps_inner"

	bindsym Return mode "$mode_gaps"
	bindsym Escape mode "$mode_gaps"
}

#USER CONFIG APPEND

workspace 5 output VGA1

#USER SCREEN MODE

set $scr_mode Screen 1:Laptop 2:VGA Extended 3:VGA Single 4:Manual

mode "$scr_mode" {

	bindsym 1 exec ~/.config/i3/scripts/screenOutputMenu -m Laptop; mode "default"
	bindsym 2 exec ~/.config/i3/scripts/screenOutputMenu -m "VGA Extended"; mode "default"
	bindsym 3 exec ~/.config/i3/scripts/screenOutputMenu -m "VGA Single"; mode "default"
	bindsym 4 exec ~/.config/i3/scripts/screenOutputMenu -m Manual; mode "default"
	bindsym Escape mode "default"
}

#USER CUSTOM EXIT MODE

set $mode_exit Exit? Enter:yes Escape:no
bindsym $mod+Shift+e mode "$mode_exit" 

mode "$mode_exit" {
	
	bindsym Return exec "i3-msg exit"
	bindsym Escape mode "default"	
}


